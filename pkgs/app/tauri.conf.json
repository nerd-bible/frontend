{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "Nerd Bible",
	"version": "0.1.0",
	"identifier": "bible.nerd",
	"build": {
		"beforeDevCommand": "cd ../web && bun start",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "cd ../web && bun run build",
		"frontendDist": "../web/dist"
	},
	"app": {
		"windows": [
			{
				"title": "Nerd Bible",
				"width": 800,
				"height": 600
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all"
	}
}
