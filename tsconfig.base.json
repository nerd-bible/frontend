{
	"compilerOptions": {
		// Enable latest features
		"lib": ["ESNext", "DOM"],
		"target": "ESNext",
		"module": "ESNext",
		"moduleDetection": "force",
		"resolveJsonModule": true,
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"allowJs": true,
		"allowImportingTsExtensions": true,

		// Bundler mode
		"moduleResolution": "bundler",
		"verbatimModuleSyntax": true,

		// Best practices
		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,

		// Some stricter flags
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noPropertyAccessFromIndexSignature": true,

		// Let's also build each package.
		"outDir": "${configDir}/dist",
		// Multi-project mode
		"composite": true,
		"incremental": true,
		"declarationMap": true,
		// Allow detecting linking to *.ts
		"customConditions": ["bun"]
	},
	"include": ["${configDir}", "${configDir}/**/*.json"],
	// Don't typecheck test files
	"exclude": ["${configDir}/**/*.test.*", "${configDir}/**/__snapshots__/*"]
}
